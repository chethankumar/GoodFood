<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="250dp"
    android:elevation="12dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/menu_item_view"
        android:background="@color/tw__solid_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.joooonho.SelectableRoundedImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu_item_imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:sriv_left_top_corner_radius="4dp"
        app:sriv_right_top_corner_radius="4dp"
        android:layout_marginBottom="65dp"
        android:src="@drawable/pasta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2Roti + Rice + 2curry + papad"
        android:textColor="#ff77767b"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/menu_item_itemdetail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Meals"
        android:textColor="#ff525155"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/menu_item_itemdetail"
        android:id="@+id/menu_item_itemName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u20B9 50"
        android:textColor="#ff525155"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:id="@+id/menu_item_itemPrice"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>